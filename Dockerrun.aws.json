{
  "AWSEBDockerrunVersion": 3,
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "sdevinl/foodidentifier-backend:latest",
      "memory": 512,
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 8000
        }
      ],
      "environment": [
      
        {
          "name": "REACT_APP_API_URL",
          "value": "http://backend:8000"
        },
        {
          "name": "CHOKIDAR_USEPOLLING",
          "value": "true"
        },
        {
          "name": "WATCHPACK_POLLING",
          "value": "true"
        }
      ],
      "command": ["bash", "-c", "gunicorn food_identifier.wsgi:application --bind 0.0.0.0:8000"],
      "healthCheck": {
        "command": ["CMD", "curl", "-f", "http://localhost:8000/api/photos"],
        "interval": 30,
        "retries": 3,
        "startPeriod": 10,
        "timeout": 5
      }
    }
  ]
} 